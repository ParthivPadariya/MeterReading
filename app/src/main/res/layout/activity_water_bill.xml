<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".waterBill"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp">

        <ImageView
            android:id="@+id/back"
            android:clickable="true"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:src="@drawable/back_aerrow">
        </ImageView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay Water Bill"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/water"/>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Select Water Board"
        android:layout_gravity="center"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/selectWaterBord"
            android:outlineProvider="background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none">
        </AutoCompleteTextView>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:outlineProvider="background"
        android:hint="RR. Number">
        <EditText
            android:background="@color/white"
            android:outlineProvider="background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/predictans"
        android:layout_width="202dp"
        android:layout_height="40dp"
        android:text=""
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.745">
    </TextView>

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:backgroundTint="#B4B4B4"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        android:text="Take Picture">
    </Button>

    <Button
        android:id="@+id/water"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:backgroundTint="#B4B4B4"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Proceed">
    </Button>

</LinearLayout>